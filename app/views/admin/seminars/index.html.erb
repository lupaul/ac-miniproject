<table class="table table-hover">
  <thead>
    <tr>
      <th>研討會名稱</th>
      <th>Creator</th>

      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @seminars.each do |seminar| %>
        <tr>
          <td><%= link_to seminar.name, admin_seminar_path(seminar) %></td>
          <td><%= seminar.user.email %></td>

          <td>
               <%= link_to "Edit", edit_admin_seminar_path(seminar) %>

          </td>
          <td>
               <%= link_to "Delete", admin_seminar_path(seminar), method: :delete, data:{confirm: "Are U sure???"} %>

          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
<%= link_to "Create",new_admin_seminar_path, class: "btn btn-danger" %>

</div>
