<table class="table">
  <thead>
    <tr>
      <th>研討會名稱</th>
      <th>Creator</th>
  <% if current_user %>
      <th>Delete</th>
  <% end %>
    </tr>
  </thead>
  <tbody>
    <% @seminars.each do |seminar| %>
        <tr>
          <td><%= link_to seminar.name, seminar_path(seminar) %></td>
          <td><%= seminar.user.email %></td>
          <td><% if current_user && current_user == seminar.user %>
               <%= link_to "Delete", seminar_path(seminar), method: :delete, data:{confirm: "Are U sure???"} %>
          <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
<%= link_to("Create",new_seminar_path) %>
</div>
